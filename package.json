{
    "name": "etalon",
    "version": "1.0.0",
    "private": true,
    "description": "Privacy audit tool built for AI coding agents and developers",
    "workspaces": [
        "packages/core",
        "packages/cli",
        "packages/mcp-server",
        "cloud/web",
        "cloud/worker"
    ],
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
        "lint": "eslint 'packages/*/src/**/*.ts' 'cloud/*/src/**/*.ts'",
        "lint:fix": "eslint 'packages/*/src/**/*.ts' 'cloud/*/src/**/*.ts' --fix",
        "format": "prettier --write 'packages/*/src/**/*.ts'",
        "test": "vitest run",
        "test:watch": "vitest",
        "publish:core": "npm run build -w packages/core && npm publish -w packages/core --access public",
        "publish:cli": "npm run build -w packages/core -w packages/cli && npm publish -w packages/cli --access public",
        "deploy:worker": "cd cloud/worker && railway up --service etalon-worker"
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.57.0",
        "prettier": "^3.2.0",
        "tsup": "^8.0.0",
        "typescript": "^5.4.0",
        "vitest": "^1.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "license": "MIT"
}